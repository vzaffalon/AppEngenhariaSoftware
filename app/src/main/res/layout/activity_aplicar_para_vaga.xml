<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/include_toolbar"/>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/gray"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:id="@+id/et_nome"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:met_singleLineEllipsis="true"
        app:met_floatingLabel="highlight"
        android:textColorHint="@color/white"
        app:met_baseColor="@color/gray"
        app:met_primaryColor="@color/gray"
        app:met_textColor="@color/black"
        app:met_textColorHint="@color/gray"
        app:met_underlineColor="@color/gray"
        app:met_errorColor="@color/colorPrimary"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Curso"
        android:id="@+id/et_curso"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:met_singleLineEllipsis="true"
        app:met_floatingLabel="highlight"
        android:textColorHint="@color/white"
        app:met_baseColor="@color/gray"
        app:met_primaryColor="@color/gray"
        app:met_textColor="@color/black"
        app:met_textColorHint="@color/gray"
        app:met_underlineColor="@color/gray"
        app:met_errorColor="@color/colorPrimary"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Semestre"
        android:id="@+id/et_login_login"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:met_singleLineEllipsis="true"
        app:met_floatingLabel="highlight"
        android:textColorHint="@color/white"
        app:met_baseColor="@color/gray"
        app:met_primaryColor="@color/gray"
        app:met_textColor="@color/black"
        app:met_textColorHint="@color/gray"
        app:met_underlineColor="@color/gray"
        app:met_errorColor="@color/colorPrimary"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Habilidades"
        android:id="@+id/et_habilidades"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:met_singleLineEllipsis="true"
        app:met_floatingLabel="highlight"
        android:textColorHint="@color/white"
        app:met_baseColor="@color/gray"
        app:met_primaryColor="@color/gray"
        app:met_textColor="@color/black"
        app:met_textColorHint="@color/gray"
        app:met_underlineColor="@color/gray"
        app:met_errorColor="@color/colorPrimary"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contato"
        android:id="@+id/et_contanto"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:met_singleLineEllipsis="true"
        app:met_floatingLabel="highlight"
        android:textColorHint="@color/white"
        app:met_baseColor="@color/gray"
        app:met_primaryColor="@color/gray"
        app:met_textColor="@color/black"
        app:met_textColorHint="@color/gray"
        app:met_underlineColor="@color/gray"
        app:met_errorColor="@color/colorPrimary"/>

    <ImageButton
        android:id="@+id/ib_aplicar_para_vaga"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:src="@drawable/apply_button"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/background"/>

</LinearLayout>
</ScrollView>