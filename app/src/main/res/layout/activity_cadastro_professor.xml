<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/background">

        <include layout="@layout/include_toolbar"/>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/gray"/>

        <TextView
            android:text="Cadastro de Professor"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="15dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:id="@+id/et_cadastro_professor_Nome"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sobrenome"
            android:id="@+id/et_cadastro_professor_Sobrenome"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Matrícula"
            android:id="@+id/et_cadastro_professor_Matricula"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:id="@+id/et_cadastro_professor_Email"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:id="@+id/et_cadastro_professor_Senha"
            android:inputType="textPassword"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Universidade"
            android:id="@+id/et_cadastro_professor_universidade"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Área de pesquisa"
            android:id="@+id/et_cadastro_professor_area_pesquisa"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Departamento"
            android:id="@+id/et_cadastro_professor_departamento"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <ImageButton
            android:id="@+id/ib_cadastro_professor"
            android:layout_height="120dp"
            android:layout_width="match_parent"
            android:src="@drawable/sig_in_button"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/background"/>


    </LinearLayout>
</ScrollView>