<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include layout="@layout/include_toolbar"/>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/gray"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titulo da vaga"
            android:id="@+id/et_titulo"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cursos"
            android:id="@+id/et_curso"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Semestre"
            android:id="@+id/et_semestre"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Requisitos"
            android:id="@+id/et_requisitos"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor do salÃ¡rio"
            android:id="@+id/et_Salario"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:met_singleLineEllipsis="true"
            app:met_floatingLabel="highlight"
            android:textColorHint="@color/white"
            app:met_baseColor="@color/gray"
            app:met_primaryColor="@color/gray"
            app:met_textColor="@color/black"
            app:met_textColorHint="@color/gray"
            app:met_underlineColor="@color/gray"
            app:met_errorColor="@color/colorPrimary"/>


        <ImageButton
            android:id="@+id/ib_criar_nova_vaga"
            android:layout_height="120dp"
            android:layout_width="match_parent"
            android:src="@drawable/adicionarvaga"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/background"/>

    </LinearLayout>
</ScrollView>